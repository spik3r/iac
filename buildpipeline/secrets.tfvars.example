# Secrets Configuration for Build Pipeline
# Copy this file to secrets.tfvars and fill in your sensitive values
# NEVER commit secrets.tfvars to version control!

# Admin Subscription Service Principal
admin_service_principal_id  = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"  # App ID from az ad sp create-for-rbac
admin_service_principal_key = "your-admin-service-principal-password"   # Password from az ad sp create-for-rbac

# Target Subscription Service Principal  
target_service_principal_id  = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"  # App ID from az ad sp create-for-rbac
target_service_principal_key = "your-target-service-principal-password" # Password from az ad sp create-for-rbac

# Azure DevOps Personal Access Token
# Get from: Azure DevOps → User Settings → Personal Access Tokens
# Required scopes: Project and Team (Read, write, & manage), Build, Release, Service Connections, Variable Groups
azuredevops_personal_access_token = "your-azure-devops-personal-access-token"

# GitHub Personal Access Token
# Get from: GitHub → Settings → Developer settings → Personal access tokens
# Required scopes: repo, admin:repo_hook, read:user
github_personal_access_token = "your-github-personal-access-token"