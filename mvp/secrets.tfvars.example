# Secrets Configuration Template
# Copy this file to secrets.tfvars and fill in your sensitive values
# NEVER commit secrets.tfvars to version control!

# Azure Service Principal (if not using Azure CLI authentication)
# client_id       = "your-service-principal-client-id"
# client_secret   = "your-service-principal-client-secret"
# tenant_id       = "your-azure-tenant-id"
# subscription_id = "your-azure-subscription-id"

# Container Registry (if using external registry)
# docker_registry_username = "your-registry-username"
# docker_registry_password = "your-registry-password"

# Alert Configuration (if enabling alerts)
# alert_email_addresses = ["admin@yourcompany.com", "devops@yourcompany.com"]

# Custom App Settings with Sensitive Values
# database_connection_string = "Server=...;Database=...;User Id=...;Password=...;"
# api_keys = {
#   "ExternalApiKey" = "your-secret-api-key"
#   "JwtSecret"      = "your-jwt-secret-key"
# }